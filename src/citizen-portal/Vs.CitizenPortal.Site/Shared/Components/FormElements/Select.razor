@inherits NldsFormElementBase
<NldsSelect @bind-Value="@Value"
            Identifier="@_data.Name"
            IsDisabled="@_data.IsDisabled"
            Size="@InputSize"
            ErrorText="@_data.ErrorText"
            Items="@SelectItems" 
            ShowEmptyValue="false">
    <Label>
        <NldsFormLabel>
            @HttpUtility.HtmlDecode(_data.Label)
        </NldsFormLabel>
    </Label>
    <Hint>
        <NldsFormHint>
            @HttpUtility.HtmlDecode(_data.HintText)
        </NldsFormHint>
    </Hint>
</NldsSelect>